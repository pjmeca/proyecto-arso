type Opinion {
  id: String!
  nombre: String!
  valoraciones: [Valoracion]
  numValoraciones: Int
  calificacionMedia: Float
}

type Valoracion {
  correo: String!
  fecha: String!
  calificacion: Float!
  comentario: String!
}

type Query {
  getOpinion(id: ID!): Opinion
  findAll: [Opinion]
}

type Mutation {
  crearOpinion(recurso: String!): Opinion
  addValoracion(id: String!, valoracion: Valoracion!): String
  removeOpinion(id: String!): String 
}

schema {
  query: Query
  mutation: Mutation
}

